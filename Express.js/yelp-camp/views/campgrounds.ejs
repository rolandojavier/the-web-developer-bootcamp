<%- include ('partials/header') -%>

<div class="container">
    <div class="jumbotron">
        <h1 class="display-3 font-weight-normal">Welcome to YelpCamp!</h1>
        <p class="lead font-weight-normal">View our hand-picked campgrounds from all over the world</p>
        <a class="btn btn-primary btn-lg" role="button" href="/campgrounds/new">Add new campground</a>
    </div>
    <div class="row">
        <% campgrounds.forEach((campground) => { %>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card">
                    <img class="card-img-top" src="<%= campground.image %> ">
                    <div class="card-body">
                        <h4 class="card-title text-center"><%= campground.name %> </h4>
                    </div>
                </div>                
            </div>
        <% }) %>
    </div>  
</div>

<%- include ('partials/footer') -%>